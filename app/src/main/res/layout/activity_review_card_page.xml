<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Review_Card_Page"
    android:background="@drawable/background_1">

    <ImageView
        android:id="@+id/iv_review_card_back"
        android:layout_width="374dp"
        android:layout_height="600dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/login_page_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvReviewCardBannerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Review Card"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Question"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_review_card_back"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/iv_review_card_back"
        app:layout_constraintTop_toBottomOf="@+id/tvReviewCardBannerText" />

    <com.example.main_activity.CenteredImageView
        android:id="@+id/ivDrawing"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion" />


    <TextView
        android:id="@+id/tvSeperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="________________________"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDrawing" />

    <TextView
        android:id="@+id/tvAnswerSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:text="Answer:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/iv_review_card_back"
        app:layout_constraintTop_toBottomOf="@+id/tvSeperator" />

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Answer"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_review_card_back"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="@+id/iv_review_card_back"
        app:layout_constraintTop_toBottomOf="@+id/tvAnswerSection" />

    <TextView
        android:id="@+id/tvShowAnswer"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="Show Answer"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_review_card_back"
        app:layout_constraintEnd_toStartOf="@+id/ivNextCard"
        app:layout_constraintStart_toEndOf="@+id/ivPreviousCard" />

    <ImageView
        android:id="@+id/ivNextCard"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/next_card"
        app:layout_constraintBottom_toBottomOf="@+id/iv_review_card_back"
        app:layout_constraintEnd_toEndOf="@+id/iv_review_card_back" />

    <ImageView
        android:id="@+id/ivPreviousCard"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/previous_card"
        app:layout_constraintBottom_toBottomOf="@+id/iv_review_card_back"
        app:layout_constraintStart_toStartOf="@+id/iv_review_card_back" />

    <ImageButton
        android:id="@+id/ivReviewBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="360dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="@+id/tvReviewCardBannerText"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
