<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Review_Card_Page"
    android:background="@drawable/background_1">

    <ImageView
        android:id="@+id/iv_Review_back"
        android:layout_width="374dp"
        android:layout_height="450dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/login_page_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRewiewCardBannerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review Card"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/ivReviewBack"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_Review_back"
        app:layout_constraintStart_toStartOf="@+id/iv_Review_back"
        app:layout_constraintTop_toTopOf="@+id/iv_Review_back" />

    <ImageView
        android:id="@+id/ivDrawing"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/tvSeperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="________________________"
        android:textSize="30sp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDrawing" />

    <TextView
        android:id="@+id/tvAnswerSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer:"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="@+id/iv_Review_back"
        app:layout_constraintTop_toBottomOf="@+id/tvSeperator" />

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Answer"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_Review_back"
        app:layout_constraintStart_toStartOf="@+id/iv_Review_back"
        app:layout_constraintTop_toBottomOf="@+id/tvAnswerSection" />

    <TextView
        android:id="@+id/tvShowAnswer"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="Show Answer"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Review_back"
        app:layout_constraintEnd_toStartOf="@+id/ivNextCard"
        app:layout_constraintStart_toEndOf="@+id/ivPreviousCard" />

    <ImageView
        android:id="@+id/ivNextCard"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/next_card"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Review_back"
        app:layout_constraintEnd_toEndOf="@+id/iv_Review_back" />

    <ImageView
        android:id="@+id/ivPreviousCard"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/previous_card"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Review_back"
        app:layout_constraintStart_toStartOf="@+id/iv_Review_back" />

    <ImageView
        android:id="@+id/ivReviewBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="344dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="@+id/tvRewiewCardBannerText"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
